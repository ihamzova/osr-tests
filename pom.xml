<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>osr-tests</artifactId>
    <packaging>jar</packaging>
    <name>osr-tests</name>
    <description>osr-tests</description>
    <version>355</version>

    <parent>
        <groupId>com.tsystems.tm.acc.tests</groupId>
        <artifactId>acc-domain-tests-bom</artifactId>
        <version>0.1.16</version>
    </parent>

    <properties>
        <framework.version>${project.parent.version}</framework.version>
        <osr.models.version>0.0.9</osr.models.version>
        <oc.domain.name>telitcaas3.t-internal.com</oc.domain.name>
    </properties>

    <repositories>
        <repository>
            <id>automation</id>
            <name>automation</name>
            <url>http://digihub-wbench.psst.t-online.corp/nexus/content/repositories/automation/</url>
        </repository>
        <repository>
            <id>stage</id>
            <name>stage</name>
            <url>http://digihub-wbench.psst.t-online.corp/nexus/content/repositories/stage/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>com.tsystems.tm.acc.tests</groupId>
            <artifactId>acc-common-models</artifactId>
            <version>${framework.version}</version>
        </dependency>
        <dependency>
            <groupId>com.tsystems.tm.acc.tests</groupId>
            <artifactId>osr-models</artifactId>
            <version>${osr.models.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tsystems.tm.acc</groupId>
            <artifactId>wiremock-acc</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.tsystems.tm.acc.tests</groupId>
                <artifactId>acc-data-maven-plugin</artifactId>
                <configuration>
                    <commonPackageName>com.tsystems.tm.acc.data.models</commonPackageName>
                </configuration>
                <executions>
                    <execution>
                        <id>generateModels</id>
                        <goals>
                            <goal>createModels</goal>
                        </goals>
                        <configuration>
                            <packageName>com.tsystems.tm.acc.data.osr.models</packageName>
                            <sourceFolder>${basedir}/osr-data</sourceFolder>
                            <outputSourceFolder>${project.build.directory}/generated-sources</outputSourceFolder>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generateData</id>
                        <goals>
                            <goal>createData</goal>
                        </goals>
                        <configuration>
                            <packageName>com.tsystems.tm.acc.data.osr.models</packageName>
                            <sourceFolder>${basedir}/osr-data</sourceFolder>
                            <outputFolder>${project.build.directory}/osr-data</outputFolder>
                            <outputSourceFolder>${project.build.directory}/generated-sources</outputSourceFolder>
                            <valuesFile>${basedir}/osr-data/values.yml</valuesFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>generateArtifacts</id>
                        <goals>
                            <goal>createArtifacts</goal>
                        </goals>
                        <configuration>
                            <packageName>com.tsystems.tm.acc.data.osr.models</packageName>
                            <sourceFolder>${basedir}/osr-data</sourceFolder>
                            <outputFolder>${project.build.directory}/osr-data</outputFolder>
                            <outputSourceFolder>${project.build.directory}/generated-test-sources</outputSourceFolder>
                            <valuesFile>${basedir}/osr-data/values.yml</valuesFile>
                        </configuration>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.tsystems.tm.acc.tests</groupId>
                        <artifactId>acc-common-models</artifactId>
                        <version>${framework.version}</version>
                    </dependency>
                    <dependency>
                        <groupId>com.tsystems.tm.acc.tests</groupId>
                        <artifactId>osr-models</artifactId>
                        <version>${osr.models.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
